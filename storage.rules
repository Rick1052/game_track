rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Videos - apenas usuários autenticados podem fazer upload
    match /videos/{videoId} {
      allow read: if true; // Qualquer um pode ler vídeos
      allow write: if request.auth != null 
        && request.resource.size < 100 * 1024 * 1024; // Max 100MB
      allow delete: if request.auth != null; // Apenas autenticados podem deletar
    }
    
    // Thumbnails
    match /thumbnails/{thumbnailId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Avatars
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && userId == request.auth.uid;
      allow delete: if request.auth != null && userId == request.auth.uid;
    }
  }
}

